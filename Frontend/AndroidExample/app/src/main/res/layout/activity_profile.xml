<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context=".CreateConcertActivity"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorPrimary"
        android:paddingVertical="10dp">

        <ImageView
            android:id="@+id/backButton"
            android:layout_gravity="left"
            android:clickable="true"
            android:layout_marginStart="10dp"
            android:padding="5dp"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/backicon">
        </ImageView>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />


        <ImageView
            android:id="@+id/banner"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:adjustViewBounds="true"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:contentDescription="concert"
            app:srcCompat="@drawable/banner" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/menuIcon"
            android:clickable="true"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="right"
            android:layout_marginEnd="20dp"
            android:scaleType="fitXY"
            android:contentDescription="map"
            app:srcCompat="@drawable/hamburgermenu" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/dropdownMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingHorizontal="20dp"
        android:orientation="vertical"
        android:background="@color/colorPrimary">

        <view
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="30dp"
            android:clipToOutline="true"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="@color/colorSecondary"
            class="android.widget.LinearLayout"
            android:orientation="vertical"
            android:layout_weight=".3">

            <TextView
                android:id="@+id/passwordButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:layout_gravity="center"
                android:paddingHorizontal="20dp"
                style="@style/MyStyle"
                android:text="Change Password"/>
        </view>

        <view
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="30dp"
            android:clipToOutline="true"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="@color/colorSecondary"
            class="android.widget.LinearLayout"
            android:orientation="vertical"
            android:layout_weight=".3">

            <TextView
                android:id="@+id/emailButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:layout_gravity="center"
                android:paddingHorizontal="20dp"
                style="@style/MyStyle"
                android:text="Change Email"/>
        </view>

        <view
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="30dp"
            android:clipToOutline="true"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="@color/colorSecondary"
            class="android.widget.LinearLayout"
            android:orientation="vertical"
            android:layout_weight=".3">

            <TextView
                android:id="@+id/editProfileButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:layout_gravity="center"
                android:paddingHorizontal="20dp"
                style="@style/MyStyle"
                android:text="Edit Profile"/>
        </view>

        <view
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="30dp"
            android:clipToOutline="true"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="@color/colorSecondary"
            class="android.widget.LinearLayout"
            android:orientation="vertical"
            android:layout_weight=".3">

            <TextView
                android:id="@+id/logoutButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:layout_gravity="center"
                android:paddingHorizontal="20dp"
                style="@style/MyStyle"
                android:text="LOGOUT"/>
        </view>

        <view
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="30dp"
            android:clipToOutline="true"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="@color/colorSecondary"
            class="android.widget.LinearLayout"
            android:orientation="vertical"
            android:layout_weight=".3">

            <TextView
                android:id="@+id/deleteAccountButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:clickable="true"
                android:textColor="@color/red"
                android:textStyle="bold"
                android:paddingHorizontal="20dp"
                style="@style/MyStyle"
                android:text="Delete Account"/>
        </view>

    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="15dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/imageWrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@color/colorPrimary">
                <LinearLayout
                    android:id="@+id/image"
                    android:clickable="true"
                    android:gravity="center"
                    android:layout_marginVertical="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="200dp"
                    android:clipToOutline="true"
                    android:background="@drawable/rounded_corner"
                    android:backgroundTint="@color/grey"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/imagePreview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:clipToOutline="true"
                        android:src="@drawable/addphotoicon"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingVertical="10dp"
            android:background="@color/colorPrimary">
                <LinearLayout
                    android:id="@+id/titleWrapper"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:clipToOutline="true"
                    android:background="@drawable/rounded_corner"
                    android:orientation="horizontal"
                    android:layout_weight=".1">
                    <TextView
                        android:id="@+id/title"
                        android:paddingHorizontal="15dp"
                        android:paddingVertical="10dp"
                        android:imeOptions="actionGo"
                        android:background="@color/grey"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="@color/black"
                        android:textColorHint="@color/darkGrey"
                        android:hint="name"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/genreWrapper"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginStart="10dp"
                    android:clipToOutline="true"
                    android:background="@drawable/rounded_corner"
                    android:orientation="horizontal"
                    android:layout_weight=".12">
                    <TextView
                        android:id="@+id/genre"
                        android:paddingHorizontal="15dp"
                        android:paddingVertical="10dp"
                        android:imeOptions="actionGo"
                        android:background="@color/grey"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="@color/black"
                        android:hint="genre"
                        android:textColorHint="@color/darkGrey"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/streetWrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@color/colorPrimary">
                <LinearLayout
                    android:layout_marginVertical="10dp"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:clipToOutline="true"
                    android:background="@drawable/rounded_corner"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/streetAddress"
                        android:paddingHorizontal="15dp"
                        android:paddingVertical="10dp"
                        android:imeOptions="actionGo"
                        android:background="@color/grey"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:textColorHint="@color/darkGrey"
                        android:hint="street address"
                        android:textColor="@color/black"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@color/colorPrimary">
                <LinearLayout
                    android:id="@+id/cityWrapper"
                    android:layout_marginVertical="10dp"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:clipToOutline="true"
                    android:background="@drawable/rounded_corner"
                    android:orientation="horizontal"
                    android:layout_weight=".1">
                    <TextView
                        android:id="@+id/city"
                        android:paddingHorizontal="15dp"
                        android:paddingVertical="10dp"
                        android:imeOptions="actionGo"
                        android:background="@color/grey"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:textColorHint="@color/darkGrey"
                        android:hint="city"
                        android:textColor="@color/black"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/stateWrapper"
                    android:layout_marginVertical="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:clipToOutline="true"
                    android:background="@drawable/rounded_corner"
                    android:orientation="horizontal"
                    android:layout_weight=".15">
                    <TextView
                        android:id="@+id/state"
                        android:paddingHorizontal="15dp"
                        android:paddingVertical="10dp"
                        android:imeOptions="actionGo"
                        android:background="@color/grey"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:textColorHint="@color/darkGrey"
                        android:hint="state"
                        android:textColor="@color/black"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@color/colorPrimary">
                <LinearLayout
                    android:id="@+id/descriptionWrapper"
                    android:layout_marginVertical="10dp"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:clipToOutline="true"
                    android:background="@drawable/rounded_corner"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/description"
                        android:gravity="start"
                        android:paddingHorizontal="15dp"
                        android:paddingVertical="10dp"
                        android:imeOptions="actionGo"
                        android:background="@color/grey"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="150dp"
                        android:fontFamily="sans-serif-medium"
                        android:textColorHint="@color/darkGrey"
                        android:hint="description"
                        android:textColor="@color/black"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.appcompat.widget.LinearLayoutCompat>