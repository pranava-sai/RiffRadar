<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context=".MainActivity"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="-40dp"
        android:text="0"
        android:textColor="#FF9100"
        android:textSize="150sp"></TextView>

    <Button
        android:id="@+id/counter_back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="-70dp"
        android:layout_marginBottom="20dp"
        android:text="Back to Main" >

    </Button>
    <Button
        android:id="@+id/counter_increase_btn0"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="-25dp"
        android:text="INCREASE BY 0"></Button>


    <Button
        android:id="@+id/counter_decrease_btn0"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="-6dp"
        android:text="DECREASE BY 0"></Button>

    <Button
        android:id="@+id/counter_increase_btn1"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="-6dp"
        android:text="INCREASE BY 1"></Button>

    <Button
        android:id="@+id/counter_decrease_btn1"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="-6dp"
        android:text="DECREASE BY 1"></Button>

    <Button
        android:id="@+id/counter_increase_btn2"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="-6dp"
        android:text="INCREASE BY 2"></Button>

    <Button
        android:id="@+id/counter_decrease_btn2"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="-6dp"
        android:text="DECREASE BY 2"></Button>

    <Button
        android:id="@+id/counter_increase_btn3"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="-6dp"
        android:text="INCREASE BY 3"></Button>

    <Button
        android:id="@+id/counter_decrease_btn3"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="-6dp"
        android:text="DECREASE BY 3"></Button>

    <Button
        android:id="@+id/counter_increase_btn5"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="-6dp"
        android:text="INCREASE BY 5"></Button>

    <Button
        android:id="@+id/counter_decrease_btn5"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="-6dp"
        android:text="DECREASE BY 5"></Button>

    <Button
        android:id="@+id/counter_increase_btn8"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="-6dp"
        android:text="INCREASE BY 8"></Button>

    <Button
        android:id="@+id/counter_decrease_btn8"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="-6dp"
        android:text="DECREASE BY 8"></Button>

    <Button
        android:id="@+id/counter_increase_btn13"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="-6dp"
        android:text="INCREASE BY 13"></Button>

    <Button
        android:id="@+id/counter_decrease_btn13"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="-6dp"
        android:text="DECREASE BY 13"></Button>




</androidx.appcompat.widget.LinearLayoutCompat>